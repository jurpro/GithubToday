<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ujanglukmanbdg.githubtoday">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubToday">
        <activity
            android:name=".activity.AboutMeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DetailSearchUserActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SearchUserActivity"
            android:exported="false" />
        <activity
            android:name=".activity.UserDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.themes.ThemeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ListUserActivity"
            android:exported="true" />
        <activity
            android:name=".ui.favorite.MyFavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.GithubToday.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <nav-graph android:value="@navigation/mobile_navigation" />
        </activity>

    </application>

</manifest>